rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }
    
    function isOwner(uid) {
      return isSignedIn() && request.auth.uid == uid;
    }
    
    // Users collection
    match /users/{uid} {
      allow read: if isOwner(uid);
      allow write: if isOwner(uid);
    }
    
    // Coaches collection
    match /coaches/{coachId} {
      allow read: if resource.data.visibility == 'public' || isOwner(resource.data.ownerId);
      allow create: if isSignedIn();
      allow update, delete: if isOwner(resource.data.ownerId);
    }
    
    // Sessions collection
    match /sessions/{sessionId} {
      allow read, write: if isOwner(resource.data.uid);
      
      // Messages subcollection
      match /messages/{messageId} {
        allow read, write: if isOwner(get(/databases/$(database)/documents/sessions/$(sessionId)).data.uid);
      }
    }
    
    // Systems collection
    match /systems/{systemId} {
      allow read, write: if isOwner(resource.data.uid);
    }
  }
}
